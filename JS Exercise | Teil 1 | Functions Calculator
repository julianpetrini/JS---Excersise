    <!--Teil 1 | Exercises: Calculator-->

    <script>

        function squareNumber(number) {
            let squared = number ** number
            return console.log("The result of squaring the number " + number + "is " + squared)
        }
        function halfNumber(number) {
            let half = number / 2
            return console.log("Half of " + number + "is " + half)
        }
        function percentOf(nu1, nu2) {
            let percent = nu1 / nu2 * 100
            console.log(nu1 + " is " + percent + "% of " + nu2);
        }
        function areaOfCircle(radius) {
            let area = Math.PI * radius ** 2
            console.log("The area of circle with radius " + radius + " is " + area);
        }
        function multi(number) {
            let half = number / 2;
            let halfYsquare = half ** half;
            console.log(areaOfCircle(halfYsquare))

        }

    </script>